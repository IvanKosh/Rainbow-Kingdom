<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical">

	<TableLayout
		android:id="@+id/local_resources"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true">

		<TableRow
			android:gravity="center">

			<TextView
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="@string/resources"/>
		</TableRow>

		<TableRow
			android:gravity="center">

			<TextView
				android:id="@+id/local_red"
				android:layout_width="match_parent"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="RED"/>

			<TextView
				android:id="@+id/local_cyan"
				android:layout_width="match_parent"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="CYAN"/>
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:gravity="center">

			<TextView
				android:id="@+id/local_green"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="GREEN"/>

			<TextView
				android:id="@+id/local_magenta"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="MAGENTA"/>
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:gravity="center">

			<TextView
				android:id="@+id/local_blue"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="BLUE"/>

			<TextView
				android:id="@+id/local_yellow"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="YELLOW"/>
		</TableRow>

	</TableLayout>

	<ProgressBar
		android:id="@+id/global_progress_bar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/local_resources"
		android:layout_centerInParent="true"/>

	<TableLayout
		android:id="@+id/global_table"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/global_progress_bar">

		<TableRow
			android:gravity="center">

			<TextView
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="Global"/>
		</TableRow>

		<TableRow
			android:gravity="center">

			<TextView
				android:id="@+id/global_red"
				android:layout_width="match_parent"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="RED"/>

			<TextView
				android:id="@+id/global_cyan"
				android:layout_width="match_parent"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="CYAN"/>
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:gravity="center">

			<TextView
				android:id="@+id/global_green"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="GREEN"/>

			<TextView
				android:id="@+id/global_magenta"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="MAGENTA"/>
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:gravity="center">

			<TextView
				android:id="@+id/global_blue"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="BLUE"/>

			<TextView
				android:id="@+id/global_yellow"
				android:gravity="center"
				android:minWidth="@dimen/minWidth"
				android:padding="@dimen/fab_margin"
				android:text="YELLOW"/>
		</TableRow>

	</TableLayout>

</RelativeLayout>